        if ($curr_time >= $end && $curr_time <= $end1) {
            $post=array(
                'job_number'=>$info['job_number'],
                'name'=>$info['name'],
                'dateline'=>$date,
                'sign_time'=>date("Y-m-d H:i:s",$curr_time),
