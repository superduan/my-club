        $data=json_decode($data,1)['data'][0];
        //return $data;
        $curr_time = time();
        $start = strtotime($date.$data['shifts_stime']);
        $start1 = strtotime($date.$data['shifts_stime'])+$data['elastic_time']*60;
        //上班打卡
        if($curr_time >= $start && $curr_time <= $start1)
        {
            $post=array(
                'job_number'=>$info['job_number'],
                'name'=>$info['name'],
                'dateline'=>$date,
