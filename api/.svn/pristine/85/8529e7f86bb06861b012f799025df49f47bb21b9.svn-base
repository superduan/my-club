        }
        $date=date("Y-m-d",time());
        $day=date("w",strtotime($date));
        $url="http://works.ljdhz.com/?service=App.Shifts.Shifts&day=".$day."&title=夜";
        $data=$this->curl($url);
        if(empty($data)){
