    private function receiveText($object)
    {
        $msg = $object->Content;
        switch ($msg) {
            case '1':
                $content="666666";
                break;
            
            default:
                $open_id=$object->FromUserName;
                $content="http://123.206.73.64:8087/index/wechat/personal?openid=".$open_id;
                break;
        }
        $result = $this->transmitText($object, $content);
        return $result;
    }

