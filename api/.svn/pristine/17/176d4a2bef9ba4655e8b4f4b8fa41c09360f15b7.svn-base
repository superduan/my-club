    //查询是否签到
    public function findWork($data){
        $res = $this->getORM()
            ->where('job_number',$data['job_number'])
            ->where('sign_time >=?',$data['start_time'])
            ->where('sign_time <=?',$data['end_time'])
            ->fetch();
        return $res;
    }
